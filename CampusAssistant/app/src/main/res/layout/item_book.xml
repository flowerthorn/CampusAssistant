<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_book"
    android:background="@drawable/item_bg_selector"
    android:layout_margin="5dip"
    android:padding="10dp"

    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="16sp"
            android:id="@+id/item_book_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="12sp"
            android:textColor="#D4D4D4"
            android:id="@+id/item_book_author"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="press"
                android:id="@+id/item_book_press"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textColor="#D4D4D4"
                android:id="@+id/item_book_date"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="location"
            android:id="@+id/item_book_location"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="search"
            android:id="@+id/item_book_search"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="state"
            android:id="@+id/item_book_state"
            />


    </LinearLayout>
    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/collect"
        />
</RelativeLayout>
